<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_marfil" >

    <TextView
        android:id="@+id/room_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.02"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_large"
        android:text="Sala Virtual XXXX"
        android:textSize="22dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/room_textview" >

        <LinearLayout
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
            android:orientation="vertical" >
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|right" >
                
                <TextView
                    android:id="@+id/textview_question"
                    android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:gravity="center_horizontal"
		            android:padding="@dimen/padding_large"
                    android:layout_margin="@dimen/padding_medium"
                    android:textSize="20dp"
                    android:text="TextView" />

                </LinearLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_choice_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/dark_blue_button"
        			style="@style/ButtonText"
                    android:onClick="choiceA"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:text="A" />

                <TextView
                    android:id="@+id/textview_choice_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_toRightOf="@+id/button_choice_a"
                    android:text="TextView"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_choice_b"
                    style="@style/ButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/green_button"
                    android:onClick="choiceB"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:text="B" />

                <TextView
                    android:id="@+id/textview_choice_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button_choice_b"
                    android:layout_alignBottom="@+id/button_choice_b"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_toRightOf="@+id/button_choice_b"
                    android:text="TextView"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_choice_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    style="@style/ButtonText"
                    android:background="@drawable/red_button"
                    android:onClick="choiceC"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:text="C" />

                <TextView
                    android:id="@+id/textview_choice_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button_choice_c"
                    android:layout_alignBottom="@+id/button_choice_c"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_toRightOf="@+id/button_choice_c"
                    android:text="TextView"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_choice_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    style="@style/ButtonText"
                    android:background="@drawable/skyblue_button"
                    android:onClick="choiceD"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:text="D" />

                <TextView
                    android:id="@+id/textview_choice_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button_choice_d"
                    android:layout_alignBottom="@+id/button_choice_d"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_toRightOf="@+id/button_choice_d"
                    android:text="TextView"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_choice_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    style="@style/ButtonText"
                    android:background="@drawable/purple_button"
                    android:onClick="choiceE"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:text="E" />

                <TextView
                    android:id="@+id/textview_choice_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button_choice_e"
                    android:layout_alignBottom="@+id/button_choice_e"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_toRightOf="@+id/button_choice_e"
                    android:text="TextView"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_choice_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    style="@style/ButtonText"
                    android:background="@drawable/yellow_button"
                    android:onClick="choiceF"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:text="F" />

                <TextView
                    android:id="@+id/textview_choice_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button_choice_f"
                    android:layout_alignBottom="@+id/button_choice_f"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_toRightOf="@+id/button_choice_f"
                    android:text="TextView"
                    android:textSize="16dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
